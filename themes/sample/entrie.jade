doctype html
html#html-top.no-js(lang='zh')
    head
        meta(charset='utf-8')
        title #{entrie.title} - dayone
    body
        a(href="../index.html") 回首頁
        hr
        h1 #{entrie.title}
        h5 #{entrie.date}
        - if (entrie.photo)
            .photo
                img(src='../' + entrie.photo, style="width: 640px")
        p.text !{entrie.text}
        - if (entrie.tags)
            span 標籤：

            each tag in entrie.tags
                a(href='../tag/'+ tag + '.html') #{tag}
                |&nbsp;
