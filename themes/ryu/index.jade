extends ./layout/default.jade

block title
    title SolidZORO
block style
    link(rel='stylesheet', href='./themes/ryu/assets/css/style.css')
block script
    script(src='./themes/ryu/assets/js/app.js')

block container
    .saya-container
        .saya
            each day in all_day
                .list
                    .item
                        h2.title
                            a(href='./day/' + day.url + '.html') #{day.title}
                        .date #{day.data_zh}

                        .typo
                            - if (day.banner_thumb)
                                .banner-thumb
                                    img(src=day.banner_thumb)
                            - if (day.content_list_html)
                                |!{day.content_list_html}
                            - else
                                |!{day.content_html}