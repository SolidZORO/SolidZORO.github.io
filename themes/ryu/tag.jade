extends ./layout/default.jade

block title
    title #{title} - Tag - #{CONFIG.SITE_NAME}
block container
    .saya-container
        .saya
            h1.title
                small TAG:&nbsp;&nbsp;
                    strong #{title}
            .list
                each data in datas
                    .item
                        h2.title
                            a(href= HOME_PATH + PATH.DAY + data.url + '.html') #{data.title}
                        .date #{data.date_zh}

                        .typo.clearfix
                            - if (data.banner_thumb)
                                .banner-thumb
                                    a(href= HOME_PATH + PATH.DAY + data.url + '.html')
                                        img(src= HOME_PATH + data.banner_thumb)
                            |!{data.content_html}

